<div class="text-center">
  <h1 class="mt-4"><%= @user.name %></h1>
  <%= image_tag user_avatar(@user), class:"mt-3" %>

  <% if @user == current_user %>
    <p class="mt-4"><%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-success' %></p>
  <% end %>

  <div class="row mt-4">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3 class="text-start">Организовал:</h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top">Пользователь пока не организовал ни одного события</p>
    <% end %>
  </div>
</div>
</div>
