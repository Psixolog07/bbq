<%= form_for @user, html: {multipart: true} do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group mt-5">
    <%= f.label :name, "Имя" %>
    <%= f.text_field :name, class: 'form-control mt-2' %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :email, "Электронная почта" %>
    <%= f.text_field :email, class: 'form-control mt-2' %>
  </div>

  <div class="actions mt-4">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'Назад', :back %>
  </div>
<% end %>
