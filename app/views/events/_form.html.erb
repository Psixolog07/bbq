<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group mt-5">
    <%= f.label :title, "Название" %>
    <%= f.text_field :title, class: 'form-control mt-2' %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :address, "Адрес" %>
    <%= f.text_field :address, class: 'form-control mt-2' %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :datetime, "Время" %>
    <p class="mt-2"><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group mt-2">
    <%= f.label :description, "Описание" %>
    <%= f.text_area :description, class: 'form-control mt-2' %>
  </div>

  <div class="actions mt-4">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'Назад', :back %>
  </div>
<% end %>
