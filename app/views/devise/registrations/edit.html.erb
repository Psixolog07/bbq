<h2 class="mt-4">Редактирование пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
  <%= render "partials/form_errors", resource: resource %>

  <form class="row gy-2 gx-3 align-items-center">
    <div class="col-auto mt-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm", 
        placeholder: "Электронная почта" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Ожидается подтверждение: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="col-auto mt-3">
      <% if @minimum_password_length %>
        <% min_pas_len = "(#{@minimum_password_length} символов минимум)" %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow-sm",
        placeholder: "Пароль #{min_pas_len} (оставьте это поле пустым если не хотите его изменить)" %>
    </div>

    <div class="col-auto mt-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm",
        placeholder: "Подтвердите пароль" %>
    </div>

    <div class="col-auto mt-3">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control shadow-sm",
        placeholder: "Текущий пароль (необходим, чтобы подтвердить изменения)" %>
    </div>

    <div class="col-auto mt-3">
      <%= f.submit "Обновить", class: "btn btn-primary" %>
    </div>
  </form>
<% end %>

<h3 class="mt-4">Удалить аккаунт</h3>

<%= button_to "Удалить мой аккаунт", registration_path(resource_name), method: :delete,
  form: {data: {turbo_confirm: t('are_you_sure')}}, class:"btn btn-primary mt-3" %>

<div class="mt-5"><%= link_to "Назад", :back %></div>
