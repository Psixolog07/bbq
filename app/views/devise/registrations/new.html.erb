<h2 class="mt-4"><%= I18n.t("views.devise.registrations.new") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
  html: { data: { turbo: false } }) do |f| %>
  <%= render "partials/form_errors", resource: resource %>

  <form class="row gy-2 gx-3 align-items-center">
    <div class="col-auto mt-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm", 
        placeholder: I18n.t("activerecord.attributes.user.email") %>
    </div>

    <div class="col-auto mt-3">
      <% if @minimum_password_length %>
        <% min_pas_len = "(#{@minimum_password_length} #{I18n.t("devise.passwords.characters_minimum")})" %>
      <% end %>
      
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow-sm",
        placeholder: "#{I18n.t("activerecord.attributes.user.password")} #{min_pas_len}" %>
    </div>

    <div class="col-auto mt-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm",
        placeholder: I18n.t("activerecord.attributes.user.password_confirmation") %>
    </div>

    <div class="col-auto mt-3">
      <%= f.submit I18n.t("views.devise.registrations.new"), class: "btn btn-primary" %>
    </div>
  </form>
<% end %>

<%= render "devise/shared/links" %>
