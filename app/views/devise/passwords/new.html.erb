<h2 class="mt-4"><%= I18n.t("devise.passwords.forgot_your_password") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name),
  html: { method: :post, data: { turbo: false } }) do |f| %>
  <%= render "partials/form_errors", resource: resource %>

  <form class="row gy-2 gx-3 align-items-center">
    <div class="col-auto mt-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm",
        placeholder: I18n.t("activerecord.attributes.user.email") %>
    </div>

    <div class="col-auto mt-3">
      <%= f.submit I18n.t("devise.passwords.send_recover_instructions"), class: "btn btn-primary" %>
    </div>
  </form>
<% end %>

<%= render "devise/shared/links" %>
